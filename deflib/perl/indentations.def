fncode: get_indent_spaces($t)
    use integer

    my $n=length($t)
    my $count=0
    $for $i=0:$n
        $if substr($t, $i, 1) eq ' '
            $count++
        $elif substr($t, $i, 1) eq "\t"
            $count=($count/8+1)*8
        $else
            return $count
    return $count

