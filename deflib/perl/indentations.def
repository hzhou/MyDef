#-  e.g. my $indent = get_indent($line)

fncode: get_indent($s)
    $global @indent_stack=(0)
    use integer;
    1 while $s=~s/\t+/' ' x (length($&) * 8 - length($`) % 8)/e;
    my $i=length($s);
    $if $i==$indent_stack[-1]
        NOOP
    $elif $i>$indent_stack[-1]
        push @indent_stack, $i
    $else
        $while $i<$indent_stack[-1]
            pop @indent_stack;
    
    return $#indent_stack;

