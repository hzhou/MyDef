phpcode: getparam(var)
    $if array_key_exists('$(var)', $_POST)
	$$(var)=$_POST['$(var)'];
    $elif array_key_exists('$(var)', $_GET)
	$$(var)=$_GET['$(var)'];

phpcode: loadget(var)
    $if array_key_exists('$(var)', $_GET)
	$$(var)=$_GET['$(var)'];

phpcode: loadpost(var)
    $if array_key_exists('$(var)', $_POST)
	$$(var)=$_POST['$(var)'];

phpcode: reqparam(var)
    $if array_key_exists('$(var)', $_POST)
	$$(var)=$_POST['$(var)'];
    $elif array_key_exists('$(var)', $_GET)
	$$(var)=$_GET['$(var)'];
    $else
	$errors[]="Missing $(var)"
	exit()
