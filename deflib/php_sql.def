subcode: sqlexec
    $r=mysql_query($sql)
    $if !$r
	$infos[]="errsql: $sql";
	$tpage=addslashes($_SERVER["PHP_SELF"]);
	$tsql=addslashes($sql);
	mysql_query("INSERT INTO log_errsql (errsql, page) VALUES ('$tsql', '$tpage'");
	$errors[]="Database Error.";
