        }
        else{
            if($listname){
                push @$out, "if(\$$listname){";
                push @$out, "    print \$$listname\[\$$f\];";
                push @$out, "}";
                push @$out, "else{";
                push @$out, "    print \$$f;";
                push @$out, "}";  
            }
            else{
                push @$out, "print \$$f;";
            }
        }
    }

