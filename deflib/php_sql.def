    sub loadoptlist {
        my ($out, $f)=shift;
        my $ff=$MyDef::def->{fields}->{$f};
        if(!$ff){print "loadoptlist: $f not defined.\n";}
        if($ff->{list} and $ff->{type} ne 'boolean'){
            my $listname="$f"."_optlist";
            my @list;
            if($ff->{list}=~/^\s*(\d+)-(\d+)\s*$/){
                for(my $j=$1; $j<=$2; $j++){
                    push @list, "\"$j\"=>\"$j\"";
                }
            }
            else{
                my @opts=split /,\s*/, $ff->{list};
                foreach my $o(@opts){
                    if($o=~/(.*):(.*)/){
                        push @list, "\"$1\"=>\"$2\"";
                    }
                    else{
                        push @list, "\"$o\"=>\"$o\"";
                    }
                }
            }
            push @$out, "\$$listname=array(".join(', ', @list).");";
        }
    }

