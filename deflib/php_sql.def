        my ($out, $formname)=@_;
        my $form=$MyDef::def->{fieldsets}->{$formname};
        my $fields=$MyDef::def->{fields};
        my $flist=$form->{fields};
        foreach my $f (@$flist){
            my $ff=$fields->{$f};
            if($ff->{list}){
                my $listname="$f"."_optlist";
                my @opts=split /,\s*/, $ff->{list};
