# -- COMMON PATTERNS ---------------
subcode: topdown_loop(name, top)
    my %$(name)_hash
    my @$(name)_list
    $global @topdown_list
    @topdown_list = ($(top))

    $while my $$(name)=pop @topdown_list
        $if !$$(name)_hash{$$(name)}
            $$(name)_hash{$$(name)}=1
            BLOCK

# -- dbl_list ----------------
subcode: dbl_list(name)
    $global @$(name), %$(name)
    @$(name)=()
    %$(name)=()

subcode: dbl_push(name, v)
    my $t_name=$(v)
    $if $(v)=~/^(\S+)\s*=/
        $t_name=$1
    $if !$$(name){$t_name}
        $$(name){$t_name}=1
        push @$(name), $(v)

# -- Parser -------------------
# for simple parsing; for more complicated cases, ref perl/parse.def
subcode: parse_loop(l)
    $while 1
        $if $(l)=~/\G$/sgc
            last
        BLOCK

    subcode: if_lex(@pattern)
        $case $(l)=~/\G$(pattern)/sgc
            BLOCK

