include: ext.def

perlcode: markdown
    &call grab_codelist
        $if $param=~/(\S+)/
            open In, $1
            my @t=<In>
            close In
            $codelist=\@t
    $if $codelist
        my $prog="markdown_translate.pl"
        use IPC::Open2
        local(*In, *Out)
        my $pid=open2(*Out, *In, $prog) or die "Can't open $prog\n"
        $foreach $t in @$codelist
            print In "$t\n"
        close In
        $while <Out>
            push @$out, $_
        close Out
        waitpid($pid, 0)
