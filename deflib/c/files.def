    temp_string.$clear
    temp_string.$fmt $(pat)
    $if temp_string_len>0
	#---- tuple of pat_pos, path_pos, DIR
	$local string s_path
	$local darray glob:int, int, DIR*
	$local tn_pat, tn_path, DIR* p_dir

	$if temp_string[0]=='/'
	    ts_start_dir="/"
	    s_path.$add "/"
	    tn_pat=1
	    tn_path=1
	$else
	    ts_start_dir="."
	    tn_pat=0
	    tn_path=1

	glob.$push tn_pat, tn_path
	$call find_path_component
	s=temp_string+tn_pat
	$if *s

subcode: find_path_component
    s=temp_string+tn_pat
    tn_next=0
    tb_flag=0
    $while 1
	$if *s=='\0'
	    tn_next=s-temp_string
	    break
	$elif *s=='\\'
	    $if s[1]
		s+=2
		tb_flag=1
		continue
	    $else
		tn_next=s+1-temp_string
		break
	$elif *s=='/'
	    *s='\0'
	    tn_next=s+1-temp_string
	    break
	s++
    #---- clear the escape ----
    $if tb_flag
	s=temp_string+tn_pat
	$while *s
	    $if *s=='\\'
		$for i=s-temp_string:tn_next-1
		    temp_string[i]=temp_string[i+1]
	    s++

