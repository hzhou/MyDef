subcode: run_thread(subname)
    $uselib pthread                                                 
    $function thread_fn(void * p_dummy)
	$return_type void *                                             
	$call $(subname)
    $local pthread_t thread_id                                      
    pthread_create(&thread_id, NULL, $(lamda), NULL)          
                                                                    
