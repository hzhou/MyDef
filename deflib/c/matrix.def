#- A = LDL'
fncode: f_matrix_cholesky(pf_A, n)
    $(set:M=pf_A[$1*n+$2])
    # $call set_matrix, A, n, n
    #---- LDL' ----
    $for i=0:n
        tf_pivot=$(M:i,i)
        $for j=i+1:n
            $my tf_l=$(M:j,i)/tf_pivot
            $(M:j,i) = tf_l
            $for k=i+1:n
                $(M:j,k)-=tf_l*$(M:i,k)
    #---- split D ----
    $for i=0:n
        $(M:i,i)=sqrt($(M:i,i))
        $for j=i+1:n
            $(M:i,j)=$(M:j,i)

#- inv(A) = inv(L)' inv(D) inv(L)
fncode: f_matrix_cholesky_inverse(pf_A, n)
    $(set:M=pf_A[$1*n+$2])
    $for i=1:n
        k=i-1
        $(M:i,k)=-$(M:i,k)
        $for j=k:0
            $(M:i,j)=-$(M:i,j)+$(M:i,j+1)*$(M:i-1,j)
    $for i=0:n
        $(M:i,i)=1.0/$(M:i,i)
        $for j=i+1:n
            $(M:i,j)=$(M:j,i)

#- V = inv(sqrt(D)) inv(L)' V
fncode: f_matrix_cholesky_inverse_transform(pf_A, n, pf_V)
    $(set:M=pf_A[$1*n+$2])
    $for i=0:n
        tf_sum=pf_V[i]
        $for j=i+1:n
            tf_sum+=$(M:j,i)*pf_V[j]
        pf_V[i]=tf_sum*$(M:i,i)

