subcode: vector_print(v)
    $print "\nVector $(v): -"
    $get_var_attr $(v), dimension
    $fcall f_vector_print($(v), $(dimension))

fncode: f_vector_print(pf_V, m)
    $(set:V=pf_V[$1])
    $print "%g-", $(V:0)
    $for i=1:m
        $if i>20
            $print " ... -"
            i=m-2
        $else
            $print ", %g-", $(V:i)
    $print

