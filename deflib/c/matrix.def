subcode: set_matrix(v, m, n)
    $set_var_attr $(v), dim1=$(m), dim2=$(n)

subcode: print_matrix(v)
    $get_var_attr $(v), dim1, dim2
    $print \nMatrix $(v): $(dim1) x $(dim2)
    $(mset:limit=8, skip=3, skip2=5)
    $(if:dim1 and dim2)
	k=0
	$for i=0:$(dim1)
	    $if $(dim1)>$(limit) && i==$(skip)
		$print "      ... ..."
		i+=$(dim1)-$(skip2)
		k=i*($(dim2)+1)
	    $else
		$for j=0:$(dim2)
		    $if $(dim2)>$(limit) && j==$(skip)
			printf "  ...  "
			j+=$(dim2)-$(skip2)
			k=i*$(dim2)+j
		    $else
			printf " %6g ", $(v)[k]
		    k++
		$print

