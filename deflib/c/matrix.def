subcode: matrix_inv(var)
    $call matrix_LU, $(var)

    $get_var_attr $(var), dim1, dim2
    $fcall f_matrix_LU_invert($(var), $(dim1))
    $for i=0:$(dim1)
        $fcall f_pivot_vector($(var)+i*$(dim1), $(P), $(work), $(dim1))


fncode: f_matrix_LU_invert(pf_A, n)
    $(set:M=pf_A[($1)*n+$2])

    #--- forward elimination ----
    $for i=1:n
        k=i-1
        $(M:i,k)=-$(M:i,k)
        $for j=k:0
            $(M:i,j)=-$(M:i,j)+$(M:i,j+1)*$(M:i-1,j)
    #--- backward substitution ----
    $for i=0:n
        $(M:i,i)=1.0/$(M:i,i)
        $for j=0:i
            $(M:i,j) *= $(M:i,i)
        $for j=i+1:n
            $(M:i,j) *= $(M:i,i)

        $for k=0:i
            $for j=0:i
                $(M:k,j) -= $(M:k,i)*$(M:i,j)
            $for j=i+1:n
                $(M:k,j) -= $(M:k,i)*$(M:i,j)
            $(M:k,i) = -$(M:k,i)*$(M:i,i)

