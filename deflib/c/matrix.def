subcode: matrix_det(var)
    $call matrix_LU, $(var)

    $get_var_attr $(var), dim1, dim2

    $my tf_det
    tf_det=1.0
    $for i=0:$(dim1)
        tf_det *= $(var)[i*$(dim1)+i]

    $list f_permutation_parity
    $if f_permutation_parity($(P), $(dim1))
        tf_det=-tf_det

    $yield tf_det

fncode: f_permutation_parity(int * P, m)
    $local_allocate(m, 0) pn_check
    tn_count=0
    $while 1
        tn_start=-1
        $for i=0:m
            $if pn_check[i]==0
                tn_start=i
                break
        $if tn_start<0
            break

        i=tn_start
        pn_check[i]=1
        $while P[i]!=tn_start
            i=P[i]
            pn_check[i]=1
            tn_count++
    return tn_count%2
