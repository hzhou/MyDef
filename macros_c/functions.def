subcode:: c_support_subs
    $sub get_var_type_complex
	my $name=shift
	my ($type, $tail)
	$if $debug eq "type"
	    print "get_var_type_complex [$name]\n"
	$if $name=~/^(\w+)(.*)/
	    $tail=$2
	    $type=get_var_type($1)
	$if $debug eq "type"
	    print " ->type:$type, tail:[$tail]\n"
	$while 1
	    $if $tail=~/^\[.*?](.*)/
		$tail=$1
		$type=pointer_type($type)
	    $elif $tail=~/^\.(\w+)(.*)/
		$tail=$2
		$type=get_struct_element_type($type, $1)
	    $elif $tail=~/^->(\w+)(.*)/
		$tail=$2
		$type=pointer_type($type)
		$type=get_struct_element_type($type, $1)
	    $else
		last
	return $type

    $sub get_var_type
	my $name=shift;
	$if $cur_scope->{var_type}->{$name}
	    return $cur_scope->{var_type}->{$name}
	$for $i=$#scope_stack;$i>=0;$i--
	    $if $scope_stack[$i]->{var_type}->{$name}
		return $scope_stack[$i]->{var_type}->{$name}

	$if $cur_function and $cur_function->{var_type}->{$name}
	    return $cur_function->{var_type}->{$name};
	$else
	    return $global_type->{$name};
    $sub get_var_flag
	my $name=shift;
	$if $cur_function->{var_flag}->{$name}
	    return $cur_function->{var_flag}->{$name};
	$else
	    return $global_flag->{$name};
    $sub get_compound_type
	my $name=shift
	$if $name=~/^(\w+)(.*)/
	    return get_sub_type(get_var_type($1), $2)
	return "void";

    $sub get_sub_type
	my ($type0, $tail)=@_
	$if $debug eq "type"
	    print "get_sub_type: $type0 - $tail\n"

	$if $tail=~/^(\.|->)(\w+)(.*)/
	    $tail=$3;
	    my $type=get_struct_element_type($type0, $2)
	    return get_sub_type($type, $tail)
	$elif $tail=~/^\[.*?\](.*)/
	    $tail=$1;
	    $if $type0=~/(.*)\s*\*\s*$/
		return get_sub_type($1, $tail)
	    $else
		die "error in derefencing pointer type $type\n"
	$else
	    return $type0

