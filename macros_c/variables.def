subcode: check_var_special
    $if $param=~/^(\w+)\s+(.*)$/
        $if $class_names{$1}
            my $scope=$func
            my ($class, $param)=($1, $2)
            my $initname=$class."_init"
            $if $debug eq "type"
                $print "$red{$class} - $param"
            $if $param=~/^(\w+)\s*$/
                $if $(hascode:$initname)
                    MyDef::compileutil::call_sub("$initname, $1, $scope, default")
                    return
            $elif $param=~/^(\w+)\s*:\s*(.*)/
                $if $(hascode:$initname)
                    MyDef::compileutil::call_sub("$initname, $1, $scope, $2")
                    return

