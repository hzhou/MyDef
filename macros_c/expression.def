subcode:: parsecode_func_other
    $elif $func eq "yield"
        $global $yield
        $yield=$param
        return
    $elif $func eq "set_function_defaults"
        $global %function_defaults
        my @plist=MyDef::utils::proper_split($param)
        my $pattern=shift @plist
        $foreach $name in @plist
            $function_defaults{$name}=$pattern
        return

