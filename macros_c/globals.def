	"printf|perror"=>"stdio.h",
	"malloc"=>"stdlib.h",
	"str(len|dup|cpy)|memcpy"=>"string.h",
	"\\bopen\\("=>"fcntl.h",
	"sin|cos|sqrt"=>"math.h",
	"fstat"=>"sys/stat.h",
    );

    sub register_type_prefix {
	my ($k, $v)=@_;
	$type_prefix{$k}=$v;
    }

