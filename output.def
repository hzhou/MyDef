subcode: case_reset
    $global @case_stack
    $global $case_state, $case_wrap
    @case_stack=()
    undef $case_state
    $if $case_wrap
	push @$out, @$case_wrap
	undef $case_wrap

subcode: case_push(state)
    $if !$case_wrap
	$case_wrap=[]
    push @case_stack, {state=>$(state), wrap=>$case_wrap}

    undef $case_state
    undef $case_wrap
    $call debug_case_push

subcode: case_pop
    $call debug_case_pop
    my $t_case=pop @case_stack
    $if $t_case
	$case_state=$t_case->{state}
	$case_wrap=$t_case->{wrap}

subcode: parsecode_case_support(if, elif, style)
    $global $case_if="$(if)", $case_elif="$(elif)"
    $global @case_stack
    $global $case_state, $case_wrap
    $call debug_case_l

    $if $l=~/^\$(if|elif|elsif|elseif|case)\s+(.*)$/
	my $cond=$2
	my $case
	$if $1 eq "if"
	    $case=$case_if
	$elif $1 eq "case"
	    $if !$case_state
		$case=$case_if
	    $else
		$case=$case_elif
	$else
	    $case=$case_elif
	$call case_$(style)
	$call case_push, "if"
	return "NEWBLOCK-CASEPOP"
    $elif $l=~/^\&case\s+(.*)/
	$if !$case_state
	    $call case_flag_if
	$else
	    $call case_flag_elif
	$call case_push, "if"
	return "NEWBLOCK-CASEPOP"
    $elif $l=~/^\$else/
	$if !$case_state
	    warn "Dangling \$else .\n"
	$call else_$(style)
	$call case_push, undef
	return "NEWBLOCK-CASEPOP"
    $elif $l!~/^SUBBLOCK/
	undef $case_state
	$if $l eq "CASEPOP"
	    $call case_pop
	    return 0
	$elif $l=~/^CASEEXIT/
	    push @$out, $case_flag_reset
	    return 0

    $if $case_wrap and !$case_state
	my $t=join(" | ", @$case_wrap)
	print "casewrap: [$l] [$t]\n"
	push @$out, @$case_wrap
	undef $case_wrap

