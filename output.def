include: macros_util/debug.def

subcode: output_main
    use MyDef::dumpout;

    our $debug;
    our $mode;
    our $page;
    our $out;
    $call @package_globals

    $sub get_interface
	return (\&init_page, \&parsecode, \&set_output, \&modeswitch, \&dumpout);

    $sub init_page
	($page)=@_;
	# ---- Set output file extension
	my $ext="$(ext)"
	$if $page->{type}
	    $ext=$page->{type};
	$call @init_page
	# !!! $page->{ext}=$ext will overwrite $(ext)
	$page->{pageext}=$ext 
	return ($ext, "$(init_mode)");

    $sub set_output
	$out = shift

    # ---- www has php,  html and js mode ----------
    $sub modeswitch
	my ($mode, $in)=@_;
	$call @modeswitch

    # ---- All specialized parsing goes here.
    $sub parsecode
	my $l=shift;
	$if $debug eq "parse"
	    $call dump_line, parsecode
	$if $l=~/^DEBUG (\w+)/
	    $if $1 eq "OFF"
		$debug=0
	    $else
		$debug=$1
	    return
	$elif $l=~/^NOOP/
	    return
	$call parsecode

    # ---- Final output, allows for 2nd pass translation
    $sub dumpout
	my $f;
	($f, $out)=@_;
	my $dump={out=>$out,f=>$f}
	$call @dumpout
	MyDef::dumpout::dumpout($dump);

    $call single_blocks
    $call @support_subs

    1;

