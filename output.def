include: macros_util/debug.def

subcode: output_main
    use MyDef::dumpout;
    package MyDef::$(pagename);

    my $debug;
    my $mode;
    my $out;
    $call @package_subs

    $sub get_interface
	return (\&init_page, \&parsecode, \&modeswitch, \&dumpout);

    $sub init_page
	my ($page)=@_;

	# ---- Set output file extension
	my $ext="$(ext)";
	$if $page->{type}
	    $ext=$page->{type};
	$call @init_page
	return ($ext, "$(init_mode)");

    # ---- php has php,  html and js mode ----------
    # ---- In xs, modeswitch were hacked to initialize functions
    $sub modeswitch
	my $pmode
	($pmode, $mode, $out)=@_;
	$call @modeswitch

    # ---- All specialized parsing goes here.
    $sub parsecode
	my $l=shift;
	$if $debug eq "parse"
	    $call dump_line, parsecode
	$if $l=~/^DEBUG (\w+)/
	    $if $1 eq "OFF"
		$debug=0
	    $else
		$debug=$1
	$call parsecode

    # ---- Final output, allows for 2nd pass translation
    $sub dumpout
	my ($f, $out)=@_;
	my $dump={out=>$out,f=>$f}
	$call @dumpout
	MyDef::dumpout::dumpout($dump);

    $call @support_subs

    1;

subcode: parsecode
    push @$out, $l
