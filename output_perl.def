subcode:: parsecode_func_other
    $elif $func =~ /^loopvar$/
        $call add_loop_var
        return 0

subcode: add_loop_var
    my @tlist=MyDef::utils::proper_split($param)
    my $block=MyDef::compileutil::get_named_block("...")
    $foreach $v in @tlist
        push @$block, "my $v;"

