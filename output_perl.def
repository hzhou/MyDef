subcode: for_i0_i1_step
    $call for_i0_i1_step_default, loop_var
    $param = "my $param"

subcode: case_perl_style
    $call check_regex_capture, $cond
    push @src, "$case($cond){";
    push @src, "INDENT";
    $if $regex_capture
        push @src, $regex_capture
    push @src, "BLOCK";
    push @src, "DEDENT";
    push @src, "}";

subcode: else_perl_style
    $call push_single_block, "else{", "}"

