fncode: parse_condition($t)
    $if $t=~/^\/|[!=]~\s*\//
        # regex 
    $elif $t=~/[^!=><]=[^="]/
        $if $t!~/["'].*=.*['"]/
            $call warn, assignment in condition [$t]? 
    $elif $t=~/\$(?:eq|ne)/
        #-- to supress warning ----
        $if $t=~/(.*?)(\S+)\s+(\$eq|\$ne)\s+(.*)/
            $if $3 eq '$eq'
                $t=$1."$2 && $2 eq $4"
            $else
                #-- remember to use () when necessary
                $t=$1."!$2 || $2 ne $4"
    return $t

subcode: check_regex_capture(t)
    my $regex_capture
    $if $(t)=~/(.*\S\/\w*)\s*->\s*([^\/]+?)\s*$/
        $(t) = $1
        my @tlist=MyDef::utils::proper_split($2)
        my (@t1, @t2)
        my $i=1
        $foreach $v in @tlist
            $if $v ne "-"
                push @t1, $v
                push @t2, '$'.$i
            $i++
        $regex_capture = "my (".join(', ', @t1).") = (".join(', ', @t2).");"

