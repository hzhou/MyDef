subcode: protect_path
    my @save_path
    BLOCK
    $if @save_path
        %path=()
        @path=@save_path
        $foreach $t in @path
            $path{$t}=1
        @save_path=()

subcode: protect_add_path(f)
    $if !@save_path
        @save_path=@path
    add_path($(f))
