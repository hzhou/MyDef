include: ext.def
perlcode: quote
    my $var = $param
    $call grab_codelist
    $if $codelist
        push @$out, "$var = \"\"\"\n"
        $foreach $t in @$codelist
            push @$out, "$t\n"
        push @$out, "\"\"\"\n"


#---- timing --------------------------- 
subcode: start_time
    $import datetime from datetime
    start_time = datetime.now()

subcode: print_time(msg)
    time_diff = datetime.now()-start_time
    $print $(msg): $time_diff

