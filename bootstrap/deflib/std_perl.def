# -- dbl_list ----------------
subcode: dbl_list(name)
    $global @$(name), %$(name)
    @$(name)=()
    %$(name)=()

subcode: dbl_push(name, v)
    $if !$$(name){$(v)}
        $$(name){$(v)}=1
        push @$(name), $(v)

subcode: dbl_push_key(name, k, v)
    $if !$$(name){$(k)}
        $$(name){$(k)}=1
        push @$(name), $(v)

subcode: dbl_push_list(name, list)
    $(list)=~s/\s*;\s*$//
    my @tlist=split /,\s*/, $(list)
    $foreach $v in @tlist
        $call dbl_push, $(name), $v

