subcode: dump(@a)
    $(for:$(a))
        print '$1 = ', "$1 "
    $print

subcode: dump_hash(h)
    $foreach $k in sort keys(%$(h))
        print "    $k: ", $$(h){$k}

# -- IO -------------------------
subcode: open_r(name)
    $(if:name~")
        $(set:name=$(name:strip))
    open In, "$(name)" or die "Can't open $(name): $!\n"
    $while <In>
        BLOCK
    close In

subcode: open_w(name)
    $(if:name~")
        $(set:name=$(name:strip))
    $(if:name~[>|])
        open Out, "$(name)" or die "Can't write $(name): $!\n"
    $(else)
        open Out, ">$(name)" or die "Can't write $(name): $!\n"
    BLOCK
    close Out

subcode: open_W(name)
    &call open_w, $(name)
        $print "  --> [$(name)]"
        $(set:print_to=Out)
        BLOCK

subcode: assert(cond)
    $if !($(cond))
        die "$(cond) - FALSE!\n"

subcode: get_file_in_t(name)
    $(if:name~")
        $(set:name=$(name:strip))
    my $t
    &call block
        open In, "$(name)" or die "Can't open $(name).\n"
        local $/
        $t=<In>
        close In

subcode: get_file_lines(name, @lines)
    $(if:name~")
        $(set:name=$(name:strip))
    $(if:!lines)
        $(set:lines=@lines)
    my $(lines)
    &call block
        open In, "$(name)" or die "Can't open $(name).\n"
        $(lines)=<In>
        close In

