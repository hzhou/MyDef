# -- DATA -------------------------
subcode: update_max(max, a)
    $if $(max)<$(a)
        $(max)=$(a)

subcode: update_min(min, a)
    $if $(min)>$(a)
        $(min)=$(a)

subcode: update_minmax(min, max, a)
    $if !defined $(min)
        $(min) = $(a)
        $(max) = $(a)
    $else
        $call update_min, $(min), $(a)
        $call update_max, $(max), $(a)

subcode: swap(a, b)
    ($(a), $(b)) = ($(b), $(a))


subcode: approx_zero(a)
    $if abs($(a))<1e-8
        $(a) = 0

