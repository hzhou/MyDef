
page: makemake
    module: perl
    type: pl

    my $libdir=$ENV{HOME}. "/lib"
    $if !-d $libdir
        die " $libdir not found\n"

    my @cfiles=glob("out/*.c")

    my @targets
    my @objects
    $foreach $f in @cfiles
        $if $f=~/out\/(\w+)\.c/
            push @targets, $1
            push @objects, "$1.o"
            load_declare($f)

    &call open_w, out/Makefile
        my $objlist=join(' ', @objects)
        print Out "libmydef.a: $objlist\n"
        print Out "\tar cr libmydef.a $objlist\n"
        print Out "\n";
        print Out "install: libmydef.a\n";
        print Out "\tinstall -m 0644 libmydef.a $libdir/\n";
        print Out "\tinstall -m 0644 libmydef.inc $libdir/MyDef/c/\n";

    &call open_w, out/libmydef.inc
        $foreach $name in @decl_list
            print Out "F $name: $decl_list{$name}\n"

fncode: load_declare($f)
    $global %decl_list, @decl_list
    &call open_r, $f
        $if /^(\S.+)\s+(\w+)\(.*\);/
            chomp;
            my ($type, $name)=($1, $2)
            $decl_list{$name}=$_
            push @decl_list, $name
