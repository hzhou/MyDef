subcode: parsecode_for_support(style)
    $if $param=~/(.*);(.*);(.*)/
        &call return_newblock, for
            $(set:type=asis)
            $call for_$(style)
    $else
        my $var
        $if $param=~/^(\S+)\s*=\s*(.*)/
            $var=$1
            $param=$2
        my @tlist=split /:/, $param
        my ($i0, $i1, $step)
        $call parsecode_for_convention
        $call @for_i0_i1_step
        &call return_newblock, for
            $(set:type=i0_i1_step)
            $call for_$(style)

subcode:@ for_i0_i1_step
    $call warn, "Supply subcode: for_i0_i1_step!"

subcode: for_i0_i1_step_default(loop_var)
    $if $step eq "1"
        $step="++"
    $elif $step eq "-1"
        $step="--"
    $else
        $step="+=$step"

    my $my=""
    $(if:loop_var!=-)
        $call $(loop_var)
    $(else)
        $if !$var
            $var = "i"

    $param="$my$var=$i0; $var$i1; $var$step"

subcode: for_c_style
    $call push_single_block, "for($param){", "}"

#---------------------------------------- 
subcode: parsecode_for_convention
    $if @tlist==1
        $i0="0"
        $i1="<$param"
        $step="1"
    $elif @tlist==2
        # $for i0:i1
        $if $tlist[1] eq "0"
            # CAUTION
            #   $i=n:0 be the reverse of $i=0:n
            $i0="$tlist[0]-1"
            $i1=">=$tlist[1]"
            $step="-1"
        $elif $tlist[1]=~/^[-0-9]+$/ && $tlist[0]=~/^[-0-9]+$/ && $tlist[0]>$tlist[1]
            $i0=$tlist[0]
            $i1=">=$tlist[1]"
            $step="-1"
        $else
            $i0=$tlist[0]
            $i1="<$tlist[1]"
            $step="1"
    $elif @tlist==3
        $i0=$tlist[0]
        $step=$tlist[2]
        $if $step=~/^-/
            # Counting down is not zero based
            $i1=">=$tlist[1]"
        $else
            # we're used to zero based counting up
            $i1="<$tlist[1]"

