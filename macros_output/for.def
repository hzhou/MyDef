subcode: parsecode_while_support(style)
    my ($init, $cond, $next)

    my @clause = split /\s*;\s*/, $param
    my $n = @clause
    $if $n>1 && !$clause[-1]
        $n--

    $if $n>3
        $call warn, "error: [\$while $param]\n"
    $elif $n==3
        ($init, $cond, $next) = @clause
    $elif $n==2
        ($cond, $next) = @clause
    $elif $n==1
        $cond = $param
    $else
        $cond = 1

    &call return_newblock, while
        $call while_$(style)

#---------------------------------------- 
subcode: while_c_style
    $if $init
        push @src, "$init;"
    push @src, "while($cond){"
    push @src, "INDENT"
    push @src, "BLOCK"
    $if $next
        push @src, "$next;"
    push @src, "DEDENT"
    push @src, "}"

