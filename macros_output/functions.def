subcode:: _autoload
    $global @function_stack
    $global %list_function_hash
    $global @list_function_list

subcode:: on_init_page
    @function_stack=()
    %list_function_hash=()
    @list_function_list=()

#---- autolist ---------------------- 
subcode: autolist_page_functions
    my $codes=$page->{codes}
    &call iter_subcodes, fn
        $call add_list_function, $name

#-- cache all fncode to make autolist possible
#-    also return type for type deduction
subcode: autolist_functions(add_type)
    $global %function_autolist
    &call each_subcode, fn
        my ($return_type, $autolist)
        my $source=$code->{source}
        $foreach $l in @$source
            $if $l=~/^SOURCE/
                #skip
            $elif $l=~/^(lexical|parameter|return):\s*(.+?)\s*$/
                $if $1 eq "lexical"
                    $call parse_lexical
                $elif $1 eq "parameter"
                    $l="\$parameter $2"
                $elif $1 eq "return"
                    $l="\$return_type $2"
                    $return_type=$2
            $elif $l=~/^\$return_type\s+(.+)/
                $return_type = $1
            $elif $l=~/^\$autolist\s+(\w+)/
                # $autolist skip, $autolist 
                $autolist = $1
                $l="NOOP"
            $else
                last
        $if $return_type
            $functions{$name}={ret_type=>$return_type}
        # ---- autolist
        # $print func $name - autolist: $autolist
        $if $autolist ne "skip" and ($page->{autolist} eq "global" || $autolist)
            $function_autolist{$name}=$autolist
            $call add_list_function, $name
        $else
            $function_autolist{$name}="$(add_type)"

    # -- lexical parameter ------
    subcode: parse_lexical
        my @tlist=split /,\s*/, $2
        my @params
        my @segs
        $foreach $t in @tlist
            $if $t=~/(.*)\((\w+)\)$/
                push @params, $1
                push @segs, $2
            $else
                push @params, $t
                $if $t=~/^(.+)\s+(\S+)$/
                    push @segs, $2
                $else
                    push @segs, $t

        # ref: output_c/macros_c/expression.def
        # ref: deflib/c/lex.def
        $global %function_defaults
        $function_defaults{$name}="append:".join(', ', @segs)
        $l="\$parameter ". join(", ", @params)

