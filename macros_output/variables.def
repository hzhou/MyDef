subcode: parse_add_vars(has_type)
    # $param=~s/\s*;\s*$//
    # my @vlist=MyDef::utils::proper_split($param)
    my @vlist
    $if $param=~/[({<][^)}>]*,/
        # complex init, assume single decl.
        @vlist = ($param)
    $elif $param=~/=\s*['"][^'"]*,/
        @vlist = ($param) # ditto
    $else
        @vlist = split_var_line($param)
    $(if:has_type=1)
        $(set:v=$v,$type)
    $(else)
        $(set:v=$v)
    $foreach $v in @vlist
        $if $func eq "global"
            global_add_var($(v))
        $elif $func eq "local"
            func_add_var($(v));
        $call @parse_add_var_cases
        $else
            $call warn, add_vars: \$$func not implemented.

fncode: split_var_line($l)
    $global $custom_split_var_line
    $if $custom_split_var_line
        return $custom_split_var_line->($l)
    my @plist
    $if $l=~/;/ or $l=~/\w+\s*:[^:]/
        $call @check_parts_distribute
    $else
        # @plist=split /,\s*/, $l
        $call var_line_split, $l
    return @plist
    # ----------------------------
    subcode: var_line_split(l)
        my $t
        my $angle_level=0
        $while 1
            $if $(l)=~/\G\s*$/gc
                last
            $elif $angle_level==0
                $if $(l)=~/\G([^,<]+)/gc
                    $t.=$1
                $elif $(l)=~/\G(<)/gc
                    $angle_level++
                    $t.=$1
                $elif $(l)=~/\G(,\s*)/gc
                    $if $t
                        push @plist, $t
                    $t=""
            $else
                $if $(l)=~/\G([^<>]+)/gc
                    $t.=$1
                $elif $(l)=~/\G(<)/gc
                    $angle_level++
                    $t.=$1
                $elif $(l)=~/\G(>)/gc
                    $angle_level--
                    $t.=$1
        $if $t
            push @plist, $t

    subcode: check_parts_distribute
        my @parts=split /;\s*/, $l
        $foreach $p in @parts
            my @tlist = split /,\s*/, $p
            $if @tlist==1
                push @plist, $p
            $else
                $call count_words
                $if $tlist[0]=~/(.*\S)\s+(\w+)$/ and $cnt==1
                    my $type = $1
                    $tlist[0]= $2
                    $call distr_c_style
                $elif $tlist[-1]=~/^(\w+)\s*:(?!:)\s*(.+)$/ and $cnt==1
                    my $type = $2
                    $tlist[-1]= $1
                    $call distr_pascal
                $else
                    push @plist, @tlist

        subcode: count_words
            my ($cnt, $idx)
            $for $i=0:@tlist
                $if $tlist[$i]!~/^\w+\s*$/
                    $cnt++
                    $idx=$i

        subcode: distr_c_style
            $foreach $w in @tlist
                push @plist, "$type $w"

        subcode: distr_pascal
            $foreach $w in @tlist
                push @plist, "$w:$type"

