fncode: protect_var($v)
    $global %protected_var
    # $call warn,  protect_var $v
    $if $protected_var{$v}
        $call warn, Variable $v protected: [$protected_var{$v}]
        $protected_var{$v}++
    $else
        $protected_var{$v}=1


