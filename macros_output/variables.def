subcode: parse_var_default
    $if !$value && $name=~/(.*?)\s*=\s*(.*)/
        $name = $1
        $value = $2

    my $explicit_type;
    $if !$type
        &call @check_explicit_type
            $explicit_type=1

    $if !$type
        $type=get_c_type($name)

    #---- put it together ----
    my $var={}
    $var->{name}=$name
    $var->{type}=$type
    $var->{init}=$value
    $call @debug
    return $var

