fncode: print_def_node($node, $indent, $continue)
    $if ref($node) eq "HASH"
        $if $continue
            print "\n"
        $foreach %$node
            print "    "x$indent
            print "$k: "
            print_def_node($v, $indent+1, 1)
    $elif ref($node) eq "ARRAY"
        my $n = @$node
        $if $continue
            print "$n elements\n"
        $for $i=0:3
            $if $i<$n
                print_def_node($node->[$i], $indent+1)
        $if $n>3
            print_def_node("...", $indent+1)
    $else
        $if !$continue
            print "    "x$indent
        print $node, "\n"



