subcode:: import_file_init
    my $lastindent;

subcode: get_source_indent(curindent)
    $while $(curindent)>$lastindent
        $lastindent++;
        push @$source, "SOURCE_INDENT";

subcode: get_source_dedent(curindent)
    $while $(curindent)<$lastindent
        $lastindent--;
        push @$source, "SOURCE_DEDENT";

