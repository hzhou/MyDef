fncode: set_macro($m, $p)
    $if $debug eq "macro"
        print "set_macro: [$p]\n";
    $if $p=~/(\w+)([\+\-\*\/\.])=(.+)/
        my ($t1, $op, $num)=($1, $2, $3)
        $m->{$t1} = calc_op($m->{$t1}, $op, $num)
    $elif $p=~/(\S+?)=(.*)/
        my ($t1, $t2)=($1, $2)
        $if $t1=~/\$\(.*\)/
            expand_macro(\$t1)
        $if $t2=~/\$\(.*\)/
            expand_macro(\$t2)
        $m->{$t1}=$t2
    $else
        my $t=get_def($p)
        $if defined $t
            $m->{$p}=$t
        $else
            $call warn,  set_macro parse error: [$p]

fncode: calc_op($v, $op, $t)
    $if $op eq "."
        return $v . $t

    my $ret=get_numeric($v)
    $if $op eq "+"
        $ret+=get_numeric($t)
    $elif $op eq "-"
        $ret-=get_numeric($t)
    $elif $op eq "*"
        $ret*=get_numeric($t)
    $elif $op eq "/"
        $ret/=get_numeric($t)
    $if $v=~/^0x/
        return sprintf("0x%lx", $ret)
    $else
        return $ret

fncode: get_numeric($v)
    $if $v=~/0x(.*)/
        return hex($v)
    $else
        return $v

subcode:: support_subs
    $sub set_current_macro($name, $val)
        $deflist->[-1]->{$name}=$val

    $sub export_macro($i, $name, $val)
        $deflist->[$i]->{$name}=$val

    $sub get_current_macro($name)
        return $deflist->[-1]->{$name}

