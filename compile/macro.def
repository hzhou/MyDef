subcode: set_macro_join
    $if !$tail
        $deflist->[-1]->{$name}=""
    $else
        $tail=~s/^\s+//
        my @tlist=MyDef::utils::proper_split($tail)
        my $verb=shift @tlist
        $if $verb eq "join"
            my $sep=shift @tlist
            my $pat=shift @tlist
            $map strip_quote, $sep, $pat
            my $subblock=grabblock($block, \$lindex)
            my @out_list
            $if $pat
                $call @join_pattern
            $else
                $call @join_direct
            $deflist->[-1]->{$name}= join($sep, @out_list)
    # ----------
    subcode: join_pattern
        $foreach $t in @$subblock
            $if $t!~/^SOURCE:/
                push @tlist, MyDef::utils::proper_split($t)
        $foreach $t2 in @tlist
            my $t3=$pat
            $t3=~s/\*/$t2/g
            push @out_list, $t3
    # ----------
    subcode: join_direct
        $foreach $t in @$subblock
            $if $t!~/^SOURCE:/
                expand_macro(\$t)
                push @out_list, $t

