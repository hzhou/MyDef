subcode: _autoload
    $global @mode_stack=("sub"), $cur_mode

# MODES
fncode: modepush($mode)
    $cur_mode=$mode
    push @mode_stack, $mode;
    $f_modeswitch->($mode, 1);

fncode: modepop
    pop @mode_stack
    $cur_mode=$mode_stack[-1]
    $f_modeswitch->($cur_mode, 0);

