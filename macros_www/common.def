
subcode: parse_tag_attributes
    my @tt_list=split /,\s*/, $param;
    my $is_empty_tag=0

    my $t="";
    $if $func eq "tag" and @tt_list
	$func=shift @tt_list;
    $if $func eq "script"
	$t= " type=\"text/javascript\"";
    $foreach my $tt in @tt_list
	$if $tt eq "/"
	    $is_empty_tag=1
	$elsif $tt=~/^#(\S+)$/
	    $t.=" id=\"$1\"";
	$elif $tt=~/^(\S+?):"(.*)"/
	    $t.=" $1=\"$2\""
	$elif $tt=~/^(\S+?):(.*)/
	    $t.=" $1=\"$2\""
	$elif $tt=~/^"(.*)"/
	    $t.=" class=\"$1\"";
	$else
	    $t.=" class=\"$tt\"";
    $if $func eq "form" 
	$if $t!~/action=/
	    $t.=" action={\$_SERVER['PHP_SELF']}"
	$if $t!~/method=/
	    $t.=" method=\"post\""
