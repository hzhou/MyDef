subcode:: support_subs
    $sub js_string($t)
        my @parts=split /(\$\w+)/, $t
        $if $parts[0]=~/^$/
            shift @parts
        $for $i=0:@parts
            $if $parts[$i]=~/^\$(\w+)/
                $parts[$i]=$1
                $while $parts[$i+1]=~/^(\[.*?\])/
                    $parts[$i].=$1
                    $parts[$i+1]=$'
            $else
                $parts[$i]= "\"$parts[$i]\""
        return join(' + ', @parts)
