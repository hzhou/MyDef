subcode: test_foreach_static
    $block
	print "\ntest foreach pn_test ..."
	$my pn_test[10]
	$foreach pn_test
	    $(t)=$(i)*2+1
	    print "    %d: %d", $(i), $(t)

subcode: test_foreach_dynamic
    $block
	n=10
	$local_allocate(n) pn_test
	$foreach pn_test
	    $(t)=$(i)*2
	    print "    %d: %d", $(i), $(t)

