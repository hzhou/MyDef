include: c/files.def
include: c/regex.def

# Reference: http://hz2.org/blog/pcre_regex.html

page: test, basic_frame
    #-- assume you have this file --
    s_file="t.html"

    #-- load file ----------------
    $call stat_file, s_file
    n=$(fsize)
    $local_allocate(n+1, 0) s

    &call open_r, s_file
        fread(s, 1, n, file_in)

    #-- regular expression ------------
    $while s=~/class="title [^"]*" href="(http[^"]*)"/g
        $regex_capture ts_url
        $print link: $ts_url
