page: test
    module: perl

    $(if:1)
        $call test_inject_sub
    $(elif:1)
        $call test_grab_ogdl

subcode: test_inject_sub
    $call inject_sub
    $call P, world

perlcode: inject_sub
    require MyDef::ext
    my @src
    push @src, "\$print Hello \x24(name)!"
    MyDef::ext::inject_sub("P(name)", \@src)

