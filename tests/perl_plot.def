include: perl/gnuplot.def
page: test
    module: perl
    $(if:1)
        $call test_1
    $(elif:0)
        $call test_klein_bottle
    $(elif:0)
        $call test_gaussian
    $(elif:0)
        $call test_splot
    $(elif:0)
        $call test_vector
    $(elif:1)
        $call test_histogram
    $(elif:1)
        $call test_bessel

subcode: test_1
    my @y
    $for $i=0:100
        push @y, sin($i*0.1)

    &call get_plot, PLOT
        $call set_x_n, 100
        $call add_data, @y, Sin
        $call add_function, cos(0.1*x), Cos

