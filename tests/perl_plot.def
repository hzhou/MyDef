subcode: test_klein_bottle
    &call gnuplot, t.png
        $call set_border_none
        $call set_3d

        $print set style fill transparent solid 0.65
        $print set palette rgb 9,9,3

        $call define_klein_bottle
        $print set xrange[-8:10]
        $print set yrange[-8:8]
        $print splot x(u,v),y(u,v),-z(u,v) w pm3d
    # ---------------
    subcode: define_klein_bottle
        # Defining a klein bottle
        # see: http://en.wikipedia.org/wiki/Klein_bottle
        $print set parametric
        $print set urange[0:2*pi]
        $print set vrange[0:4*pi]
        $print set isosamples 19,44
        $print x(u,v)= v<2*pi ? (2.5-1.5*cos(v))*cos(u) : v<3*pi ? -2+(2+cos(u))*cos(v) : -2+2*cos(v)-cos(u)
        $print y(u,v)= v<2*pi ? (2.5-1.5*cos(v))*sin(u) : sin(u)
        $print z(u,v)= v<pi   ? -2.5*sin(v)             : v<2*pi ? 3*v-3*pi                : v<3*pi ? (2+cos(u))*sin(v)+3*pi  : -3*v+12*pi

