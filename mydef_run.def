#---- Run the mydef scripts directly 

page: mydef_run
    output_dir: script
    type:

    my ($def_file, $module)
    $foreach $a in @ARGV
        $if $a=~/-m(\w+)/
            $module=$1
        $elif $a=~/(.*)\.def/
            $def_file=$a

    $if !$def_file
        die "Usage: $0 input_defile.def\n"

    my ($page_name, @uselib)
    &call open_r, $def_file
        $if /^page:\s*(\w+)/
            $page_name=$1
        $elif /module:\s*(\w+)/
            $module=$1
        $elif /\$uselib\s+(.*)/
            my @tlist=split /,\s+/, $1
            $foreach $t in @tlist
                push @uselib, "-l$t"
            $module="c"
        $elif /^include:\s*c\//
            $module="c"
            $if /c\/regex.def/
                push @uselib, "-lpcre"
        $else
            $if !$module
                $if /^\s*(my|out|use)\b/
                    $module="perl"

    my $cmd
    $if $module eq "perl" and $page_name
        $cmd="mydef_page -mperl $def_file && perl $page_name.pl"
    $elif $module eq "c"
        $cmd="mydef_page -mc $def_file && gcc -o $page_name $page_name.c && ./$page_name"
        $if @uselib
            my $lib=join(' ', @uselib)
            $cmd="mydef_page -mc $def_file && gcc -o $page_name $page_name.c $lib && ./$page_name"

    $if $cmd
        $print $cmd
        system $cmd
    $else
        $print Input: $def_file
        $print module: $module

