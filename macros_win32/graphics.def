subcode: graphics(cat, param)
    $if $(cat) eq "font"
	$call g_font
    $elif $(cat) eq "moveto"
	$call g_moveto
    $elif $(cat) eq "text"
	$call g_text

subcode: g_font
    my $var=$param
    $if $var !~/^font_/
	$var="font_$var"
    global_add_var($var, "HFONT")
    $hgdi_hash{$var}=1
    push @$out, "SelectObject(hdc, $var);"

subcode: g_moveto
    $if $param=~/(\S+),\s*(\S+)/
	push @$out, "cur_x = $1;"
	push @$out, "cur_y = $2;"

subcode: g_text
    my ($text, $len)
    $if $param=~/"(.*)"\s*$/
	$text="\"$1\""
	$len=length($1)
    $elif $param=~/(\S+),\s*(\S+)/
	$text=$1
	$len=$2
    $elif $param=~/(\S+)/
	$text=$1
	$len="strlen($1)"
    push @$out, "TextOut(hdc, cur_x, cur_y, $text, $len);" 
